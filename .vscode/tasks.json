{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "presentation": {
    "reveal": "always",
    "panel": "new"
  },
  "tasks": [
    {
      "label": "1. Generate Project files",
      "group": {
          "isDefault": true,
          "kind": "test"
      },
      "type": "shell",
      "windows": {
          "command": "git submodule update --init --recursive; cmake -GNinja -Bbuild -H. -DCMAKE_BUILD_TYPE=Debug"
      }
    },
    {
        "label": "2. Build",
        "type": "shell",
        "command": "ninja",
        "options": {
            "cwd": "${workspaceRoot}/build"
        },
        "problemMatcher": []
    },
  ]
}
